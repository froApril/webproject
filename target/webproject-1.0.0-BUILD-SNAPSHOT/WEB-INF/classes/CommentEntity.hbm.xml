<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.CommentEntity" table="Comment" schema="webApplication">
        <id name="id" column="id"/>
        <property name="topicId" column="topic_id"/>
        <property name="commentTitle" column="comment_title"/>
        <property name="createDate" column="create_date"/>
        <property name="authorId" column="author_id"/>
        <property name="commentMessage" column="comment_message"/>
    </class>
</hibernate-mapping>