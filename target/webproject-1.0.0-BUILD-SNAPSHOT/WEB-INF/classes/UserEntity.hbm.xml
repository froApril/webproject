<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.UserEntity" table="User" schema="webApplication">
        <id name="id">
            <column name="id" sql-type="int(255) unsigned"/>
        </id>
        <property name="password">
            <column name="password" sql-type="char(16)" length="16" not-null="true"/>
        </property>
        <property name="nickname">
            <column name="nickname" sql-type="char(50)" length="50" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="perDes">
            <column name="perDes" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="photoPro">
            <column name="photoPro" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="contactIno">
            <column name="contactIno" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="iSstaff">
            <column name="ISstaff" sql-type="int(1)" not-null="true"/>
        </property>
        <property name="username">
            <column name="username" sql-type="char(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>