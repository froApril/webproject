<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.TopicEntity" table="Topic" schema="webApplication">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="topicName">
            <column name="topicName" sql-type="char(30)" length="30" not-null="true"/>
        </property>
        <property name="commentNum">
            <column name="commentNum" sql-type="int(255)"/>
        </property>
    </class>
</hibernate-mapping>