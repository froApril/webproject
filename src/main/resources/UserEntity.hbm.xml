<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.UserEntity" table="User" schema="webApplication">
        <id name="id">
     
           <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="nickname">
            <column name="nickname" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="varchar(10)" length="10" not-null="true"/>

        </property>
        <property name="iSstaff">
            <column name="iSstaff" sql-type="int(1) unsigned" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>