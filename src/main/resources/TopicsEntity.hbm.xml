<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.TopicsEntity" table="Topics" schema="webApplication">
        <id name="id" column="id"/>
        <property name="topicName" column="topicName"/>
        <property name="commentNum" column="commentNum"/>
        <property name="topicDescription" column="topicDescription"/>
    </class>
</hibernate-mapping>